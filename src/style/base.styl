// Normalize
// Most rules taken from normalize.css v3.0.1 (MIT License) git.io/normalize
// ============================================================================
* {
    // Set box model to border-box
    box-sizing border-box
    &:after, &:before {
        box-sizing border-box
    }
}

html
    // Prevent iOS text size adjust after orientation change, without disabling user zoom
    -ms-text-size-adjust 100%
    -webkit-text-size-adjust 100%

html
body
    // Remove default margin and padding.
    margin 0
    padding 0


// HTML5 display definitions
// ============================================================================
article
aside
details
figcaption
figure
footer
header
hgroup
main
nav
section
summary
    display block

audio
canvas
progress
video
    // Correct `inline-block` display not defined in IE 8/9.
    display inline-block
    // Normalize vertical alignment of `progress` in Chrome, Firefox, and Opera.
    vertical-align baseline // 2

audio:not([controls])
    // Prevent modern browsers from displaying `audio` without controls.
    display none
    // Remove excess height in iOS 5 devices.
    height 0

[hidden],
template
    // Address `[hidden]` styling not present in IE 8/9/10.
    // Hide the `template` element in IE 8/9/11, Safari, and Firefox < 22.
    display none


// Embedded content
// ============================================================================
img
iframe
    // Fix img and iframe display
    vertical-align: middle;

svg:not(:root)
    // Correct overflow not hidden in IE 9/10/11.
    overflow hidden


// Forms
// ============================================================================
button,
input,
optgroup,
select,
textarea
    // Correct color not being inherited. Known issue: affects color of disabled elements.
    color inherit
    // Correct font properties not being inherited.
    font inherit
    // Address margins set differently in Firefox 4+, Safari, and Chrome.
    margin 0

button
    // Address `overflow` set to `hidden` in IE 8/9/10/11.
    overflow visible

button
select
    text-transform none

button
html input[type="button"]
input[type="reset"]
input[type="submit"]
    // Correct inability to style clickable `input` types in iOS.
    -webkit-appearance button
    cursor pointer

button[disabled]
    cursor default

button::-moz-focus-inner,
input::-moz-focus-inner
    border 0
    padding 0

input
    line-height normal

input[type=checkbox],
input[type="radio"]
    // Remove excess padding in IE 8/9/10.
    padding 0

input[type="number"]::-webkit-inner-spin-button,
input[type="number"]::-webkit-outer-spin-button
    height auto

input[type="search"]
    -webkit-appearance textfield // 1

input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-decoration
    -webkit-appearance none

optgroup
    font-weight bold


// Mobile enabled
// ============================================================================
+media_mobile()
    // Simple mobile media query
    body
        width: auto;

    iframe
    object
    embed
        max-width 100%

    textarea
    table
    td
    th
    code
    pre
    samp
        -webkit-hyphens auto
        -moz-hyphens auto
        hyphens auto
        word-wrap break-word

    pre
        white-space pre-wrap

@media (max-device-width: 768px) and (orientation: landscape)
    // Webkit mobile
    html
        -webkit-text-size-adjust 100%

img
table
td
blockquote
code
pre
textarea
input
video
    // Force max-width of some key elements
    max-width 100%
